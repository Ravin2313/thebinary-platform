# Server Configuration
PORT=5000

# Database Configuration
# For Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/thebinary

# For MongoDB Atlas (Cloud) - Replace with your connection string
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/thebinary?retryWrites=true&w=majority

# JWT Secret (Change this to a random string in production)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Admin Credentials (Change these in production!)
ADMIN_EMAIL=admin@thebinary.com
ADMIN_PASSWORD=admin123

# Admin Login Path (Change this to a secret path for security)
ADMIN_LOGIN_PATH=/admin/secret-login-2024

# Cloudinary Configuration (Get from https://cloudinary.com/console)
# Sign up for free at cloudinary.com and get these credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Contact Information (Update with your details)
CONTACT_EMAIL=info@thebinary.com
CONTACT_PHONE=+91XXXXXXXXXX
WHATSAPP_NUMBER=91XXXXXXXXXX

# Optional: Email Service (for future use)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Optional: Payment Gateway (for future use)
# RAZORPAY_KEY_ID=your_key_id
